            <div class="space-y-2 p-6">
              <div class="flex items-center text-xs">
                <span class="text-xl font-medium mt-4">{item.date}</span>
              </div>
              <a href="#" class="block">
                <h3 class="text-3xl font-semibold my-6 dark:text-white">
                {item.name}
               </h3>
              </a>
              <p class="leading-snug text-lg dark:text-gray-400">{item.description}</p>
            </div>
         </div>
          ))}
